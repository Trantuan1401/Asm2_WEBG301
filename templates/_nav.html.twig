<div class="container">
    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
        <a href="{{ path('app_index') }}" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
            <span class="fs-4">Web Project</span>
        </a>
        <form action={{ path('app_product_index') }} method="get">
			<input class="form-control" type="search" placeholder="Search" aria-label="Search" name="word">
		</form>
        <ul class="nav nav-pills">
            <li class="nav-item"><a href="{{ path('app_index') }}" class="nav-link active" aria-current="page">Home</a></li>
            <li class="nav-item"><a href="{{ path('app_product_index') }}" class="nav-link">Products</a></li>
            <li class="nav-item"><a href="{{ path('about_us') }}" class="nav-link">About Us</a></li>
            {% if app.user %}
                <li class="nav-item"><a class="nav-link">Hello {{ app.user.email }}</a></li>
            {% endif %}
            <li class="nav-item">
                <a href="/{{ app.user ? 'logout' : 'login' }}" class="nav-link">
                    {{ app.user ? 'Logout' : 'Login' }}
                </a>
            </li>
        </ul>
    </header>
</div>